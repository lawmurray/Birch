class TestGaussian < TestModel {
  x:Random<Real>;
  μ:Random<Real>;
  σ2:Random<Real>;

  override function initialize() {
    μ ~ Uniform(-10.0, 10.0);
    σ2 ~ Uniform(0.1, 10.0);
  }

  override function simulate() {
    x ~ Gaussian(μ, σ2);
  }

  override function forward() -> Real[_] {
    return x.eval();
  }

  override function backward() -> Real[_] {
    return x.eval();
  }

  function marginal() -> Distribution<Real> {
    return x.getDistribution();
  }

  override function size() -> Integer {
    return 1;
  }
}

program test_pdf_gaussian(N:Integer <- 10000, S:Integer <- 20,
    lazy:Boolean <- false) {
  m:TestGaussian;
  test_pdf(m, N, S, lazy);
}

program test_z_gaussian(N:Integer <- 10000, lazy:Boolean <- false) {
  m:TestGaussian;
  test_z(m, N, lazy);
}

program test_cdf_gaussian(N:Integer <- 10000) {
  m:TestGaussian;
  test_cdf(m, N);
}

program test_grad_gaussian(N:Integer <- 1000, backward:Boolean <- false) {
  m:TestGaussian;
  test_grad(m, N, backward);
}
