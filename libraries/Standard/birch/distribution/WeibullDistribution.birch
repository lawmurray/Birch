/**
 * Weibull distribution.
 */
final class WeibullDistribution<Arg1,Arg2>(k:Arg1, λ:Arg2) <
    Distribution<Real> {
  /**
   * Shape.
   */
  k:Arg1 <- k;

  /**
   * Scale.
   */
  λ:Arg2 <- λ;

  override function simulate() -> Real! {
    return value(simulate_weibull(k, λ));
  }

  override function simulateLazy() -> Real! {
    return eval(simulate_weibull(k, λ));
  }
  
  override function logpdf(x:Real!) -> Real! {
    return value(logpdf_weibull(x, k, λ));
  }

  override function logpdfLazy(x:Real!) -> Real! {
    return eval(logpdf_weibull(x, k, λ));
  }

  override function hoist() -> Expression<Real> {
    return box(logpdf_weibull(random(), k, λ));
  }

  override function cdf(x:Real!) -> Real!? {
    return cdf_weibull(x, value(k), value(λ));
  }

  override function lower() -> Real!? {
    return 0.0;
  }

  override function fix() {
    super.fix();
    constant(k);
    constant(λ);
  }

  override function write(buffer:Buffer) {
    buffer.set("class", "Weibull");
    buffer.set("k", value(k));
    buffer.set("λ", value(λ));
  }
}

/**
 * Create Weibull distribution.
 */
function Weibull<Arg1,Arg2>(k:Arg1, λ:Arg2) -> Distribution<Real> {
  return make_weibull(k, λ);
}
function make_weibull<Arg1,Arg2>(k:Arg1, λ:Arg2) -> {
  return peg_weibull(peg(k), peg(λ));
}
function peg_weibull<Arg1,Arg2>(k:Arg1, λ:Arg2) -> {
  return WeibullDistribution<Arg1,Arg2>(k, λ);
}

